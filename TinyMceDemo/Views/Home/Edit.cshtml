@model TinyMceDemo.Models.DetailsViewModel
@{
    ViewBag.Title = "Edit";
    int count = Model.Answers.Count;
}

<div class="row">
    <div class="col-md-12">
        <br />
        <form class="form-horizontal" method="post" action="/Home/Edit">
            @Html.HiddenFor(model=> model.ID)
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Question Title:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Title" value="@Model.Title">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Question Description:</label>
                <div class="col-sm-10">
                    <textarea rows="15" class="form-control" name="Description" style="width: 100%">@Model.Description </textarea>
                </div>
            </div>
            <br />
            <hr />
            @for (int i = 0; i < count; i++)
            {
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Answer @(i + 1):</label>
                    <div class="col-sm-10">
                        <textarea rows="12" class="form-control" name="AnswerBody[]" style="width: 100%">@Model.Answers[i].AnswerBody </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd"></label>
                    <div class="col-sm-10">
                        @if (Model.Answers[i].IsRight)
                        {
                            <label><input type="checkbox" value="@(i+1)" name="IsRight" checked> Is Correct Answer</label>
                        }
                        else
                        {
                            <label><input type="checkbox" value="@(i+1)" name="IsRight"> Is Correct Answer</label>
                        }
                    </div>
                </div>
            }
            @for (int i = count; i < 6; i++)
            {
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Answer @(i + 1):</label>
                    <div class="col-sm-10">
                        <textarea rows="12" class="form-control" name="AnswerBody[]" style="width: 100%"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd"></label>
                    <div class="col-sm-10">
                        <label><input type="checkbox" value="@(i+1)" name="IsRight"> Is Correct Answer</label>
                    </div>
                </div>
            }
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
